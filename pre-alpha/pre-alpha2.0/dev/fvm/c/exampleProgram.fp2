// m4: include(`fpx.m4')
tron
launch

// ---------------------------------------------------------------------------
  as(m1)
  module(sk)
  // sk: Stack Operations.
    atom
      PUB(x1,nip):
      // (n1 n2)(n1)
        swap
        drop
        done
    enda
    atom
      PUB(x2,drop2):
      // (n1 n2)()
        drop
        drop
        done
    enda
  endm
// ---------------------------------------------------------------------------
  as(m3)
  module(cn)
  // cn: Constants.
    atom
      PUB(x1,nan):
        // ()(NaN)
        i(0x0)
        flip
        done
    enda
    atom
      PUB(x2,true):
        // ()(0x1)
        i(0x1)
        done
    enda
    atom
      PUB(x3,false):
        // ()(0x0)
        i(0x0)
        done
    enda
  endm

// ---------------------------------------------------------------------------
  as(m2)
  use(z1,m3,cn)
  module(ch)
  // ch: Character Operations.
  //  These act on whole words.
  //  These treat NaN As a character.
    atom
      PUB(x1,eq):
        // (n1 n2)(bool) equality
        jmpe(z1.x2,true)
        jump(z1.x2,false)
    enda
  endm

// ---------------------------------------------------------------------------
  as(m0)
  use(z1,m1,sk)
  use(z2,m2,ch)
  use(z3,m3,ut)
  module(main)
    unit
      PUB(x0,run):
        do(z3.x1,nan)
        do(z3.x1,nan)
        do(z2.x1,eq)
        halt
    endu
  endm
